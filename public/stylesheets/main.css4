@import url(https://fonts.googleapis.com/css?family=Telex);
p, label, input, button, select, textarea {
    font-family: Telex, sans-serif;
}
body {
    font-family: Telex, sans-serif;
}
.sidebar-nav {
    padding: 9px 0;
}
.table-details td:first-child {
    font-weight: bold;
}

/* Common */
.top {
    margin-top: 0;
}
.danger {
    color: #bd362f;
}

/* Utillities */
.mb0 {
    margin-bottom: 0;
}
.mb20 {
    margin-bottom: 20px;
}
.ml10 {
    margin-left: 10px;
}
.mt20 {
    margin-top: 20px;
}

/* Filter */
.filter .hide {
    display: none;
}

/* ACL */
.acl th, .acl td:not(:first-child) {
    text-align: center;
}
.acl tr > :nth-child(even) {
    background: #f9f9f9;
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
}
.acl td:first-child {
    font-weight: bold;
}
.login {
    margin: 0 auto;
    width: 370px;
}
.login .fields {
    margin-left: 30px;
}
.login .well {
    background: #fafafa;
    padding-bottom: 0;
}

/* Users */
.ngos.row {
    margin-left: 0;
}
.ngos .span2 {
    width: 30px;
}
.ngos .span {
    width: 220px;
}
.ngos .btn:first-child {
    margin-top: 25px;
}
.ngos .btn {
    margin: 5px 0;
}

/* Map */
#map {
    height: 450px;
    margin: 20px auto;
    border: 2px solid #999;
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .15);
    -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, .15);
    box-shadow: 0 1px 2px rgba(0, 0, 0, .15);
    overflow: hidden;
}

/* Fix for Twitter Bootstrap 2.0 */
#map label {
    width: auto;
    display: inline;
}
#map img {
    max-width: none;
}
.center {
    text-align: center;
}
.table th, .table td {
    max-width: 325px;
}
.table td a.btn {
    margin: 2px 0;
}
.table td.buttons {
    padding: 5px;
}